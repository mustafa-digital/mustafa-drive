<!-- file.ejs -->

<%- include("partials/head") %>
<body>
  <%- include("partials/header") %>
  <h3><a href="/folder/<%= currentFolder.id %>">Back to <%= currentFolder.name %></a></h3>
  <h1><%= file.originalname %></h1>
  <h2>Size: <%= (file.size / 1000).toFixed(2) %> kb</h2>
  <h2>Created at: <%= file.createdAt %> </h2>
  <h2>Last updated: <%= file.updatedAt  %></h2>
  <h2><a href="/file/<%=file.id %>/download">Download file</a></h2>
  <form action="/file/<%=file.id %>/delete" method="post" style="display:inline;">
    <button type="submit" onclick="return confirm('Are you sure you want to delete this item?')">Delete File</button>
  </form>
</body>
<%- include("partials/footer") %>